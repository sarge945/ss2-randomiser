//Create a randomiser for the Cryo Sector Weapons (only PsiAmp)
Create "rndComplexRandomiser" "rndCryoWeaponRandomiser"
{
	+ObjProp "DesignNoteSS" = "allowedTypes0=-12; disallowMarkers=true;"
}

//Link the Cryo Items to it as Input
+Link "rndCryoObjects" "rndCryoWeaponRandomiser" "SwitchLink"
{
}

//Link the Cryo Items to it as Output
+Link "rndCryoObjects" "rndCryoWeaponRandomiser" "~SwitchLink"
{
}

